<idea-plugin>
    <id>io.acari.themed-components</id>
    <name>Themed Components</name>
    <version>@version@</version>
    <vendor email="alexsimons9999@gmail.com" url="https://github.com/cyclic-reference">cyclic-reference</vendor>

    <description><![CDATA[
        <h2>Themed Components</h2>
        <br/>
        <p>
            Stuff to put in Later
        </p>
        <br/>
        <div align="center"><img src="https://raw.githubusercontent.com/cyclic-reference/jetbrains-theme/master/assets/logo.png" alt="Doki Theme"/></div>
        ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable id="a336bd8d-393c-4e50-8633-243969706439"
                                 instance="io.acari.themed.components.settings.ThemeSettings"
                                 groupId="appearance"/>
        <applicationService serviceImplementation="io.acari.themed.components.settings.Configurations"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>io.acari.themed.components.ThemedComponents</implementation-class>
        </component>
    </application-components>


    <actions>
        <!-- Add your actions here -->
        <action id="io.acari.themed.components.actions.ThemedTitleBarAction"
                class="io.acari.themed.components.actions.ThemedTitleBarAction" text="Themed Title Bar"
                icon="/icons/themedTitleBar.svg"
                description="Makes the MacOS title bar the same color as your selected theme."/>
    </actions>
</idea-plugin>